{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "js/*": ["js/*"],
      "@oxygen/types": ["./node_modules/@orkait/pastekey_types/dist/index.js"]
    }
  },
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "@tsconfig/react-native/tsconfig.json"
}
